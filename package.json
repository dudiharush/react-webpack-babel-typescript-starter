{
  "private": true,
  "name": "webpack-typescript-react-starter",
  "version": "1.0.0",
  "repository": "git@github.com:saltyshiomix/webpack-typescript-react-starter.git",
  "author": "Shiono Yoshihide <shiono.yoshihide@gmail.com>",
  "license": "MIT",
  "scripts": {
    "check-types": "tsc",
    "set-webpack-ts-config": "cross-env TS_NODE_PROJECT=\"./config/webpack/tsconfig-for-webpack-config.json\"",
    "build": "yarn run clean-dist && yarn run set-webpack-ts-config webpack -p --config=config/webpack/webpack.prod.ts",
    "clean-dist": "rimraf dist/*",
    "start": "yarn run set-webpack-ts-config webpack-dev-server --config=config/webpack/webpack.dev.ts",
    "test": "jest --watch --coverage",
    "lint:fix": "eslint src/*.tsx --fix"
  },
  "jest": {
    "projects": [
      "<rootDir>/config/jest.config.ts"
    ]
  },
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.21",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/react-test-renderer": "^16.9.1",
    "@types/webpack": "^4.39.8",
    "@types/webpack-dev-server": "^3.4.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.11.0",
    "serve": "^11.2.0",
    "terser-webpack-plugin": "^2.2.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md}": [
      "tsc --noEmit",
      "yarn run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": " lint-staged"
    }
  }
}
